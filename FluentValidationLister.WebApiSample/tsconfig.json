{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [ "jquery" ]
    },
    "include": [ "Scripts/**/*" ],
    "exclude": [ "node_modules", "wwwroot" ]
}
